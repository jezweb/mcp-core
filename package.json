{
  "name": "openai-assistants-mcp",
  "version": "1.0.0",
  "description": "OpenAI Assistants MCP Server - Complete assistant, thread, message, and run management. Deploy via Cloudflare Workers, NPM package, or local development.",
  "main": "dist/worker.js",
  "type": "module",
  "scripts": {
    "build": "wrangler deploy --dry-run",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "openai",
    "assistants",
    "assistants-api",
    "threads",
    "messages",
    "runs",
    "cloudflare-workers",
    "serverless",
    "universal",
    "roo",
    "claude-desktop",
    "stdio",
    "typescript"
  ],
  "author": "OpenAI Assistants MCP Server Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "wrangler": "^3.95.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0"
  }
}
