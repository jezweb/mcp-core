{
  "name": "openai-assistants-mcp",
  "version": "3.0.0",
  "description": "Universal OpenAI Assistants MCP Server v3.0 - Major architectural refactoring with unified 'Shared Core with Thin Adapters' architecture. Features enterprise-grade configuration management, eliminated 2,083+ lines of duplicate code, enhanced build systems, comprehensive testing infrastructure, and seamless deployment across Cloudflare Workers and NPM with 100% backward compatibility.",
  "main": "dist/worker.js",
  "type": "module",
  "scripts": {
    "build": "wrangler deploy --dry-run",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "type-check": "tsc --noEmit",
    "test": "node test/run-all-tests.js",
    "test:all": "node test/run-all-tests.js",
    "test:integration": "node test/integration/comprehensive-integration-test.js",
    "test:error-handling": "node test/error-handling/error-handling-tests.js",
    "test:performance": "node test/performance/performance-tests.js",
    "test:edge-cases": "node test/edge-cases/edge-case-tests.js",
    "test:cloudflare": "node test/deployment/cloudflare-workers-tests.js",
    "test:npm": "node test/deployment/npm-package-tests.js",
    "test:assistant-management": "node test-assistant-management.js",
    "test:validation": "node test-validation-only.js",
    "test:core": "node test/run-all-tests.js --core-only",
    "test:quick": "node test/run-all-tests.js --integration-only",
    "test:ci": "node test/run-all-tests.js --skip-performance",
    "test:watch": "nodemon --exec 'npm test' --watch test/ --watch src/",
    "test:coverage": "c8 npm test",
    "test:debug": "node --inspect-brk test/run-all-tests.js",
    "definitions:validate": "node definitions/scripts/validate.js",
    "definitions:build": "node definitions/scripts/build.js",
    "definitions:watch": "nodemon --exec \"npm run definitions:build\" --watch definitions/ --ext json",
    "definitions:clean": "rm -rf definitions/generated/*",
    "definitions:migrate": "node definitions/scripts/migrate.js",
    "definitions:tools": "node definitions/scripts/build.js --type=tools",
    "definitions:prompts": "node definitions/scripts/build.js --type=prompts",
    "definitions:resources": "node definitions/scripts/build.js --type=resources",
    "validate:enhanced": "node definitions/scripts/enhanced-validate.js",
    "validate:fix": "node definitions/scripts/enhanced-validate.js --fix",
    "validate:report": "node definitions/scripts/enhanced-validate.js --report",
    "build:enhanced": "node definitions/scripts/enhanced-build.js",
    "build:docs": "node definitions/scripts/enhanced-build.js --docs-only",
    "build:incremental": "node definitions/scripts/enhanced-build.js --incremental",
    "quality:check": "node definitions/scripts/enhanced-validate.js --quality",
    "quality:dashboard": "node definitions/scripts/enhanced-build.js --dashboard",
    "dev:validate": "npm run validate:enhanced && npm run build:enhanced",
    "dev:watch": "nodemon --watch definitions/ --exec \"npm run dev:validate\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "openai",
    "assistants",
    "assistants-api",
    "threads",
    "messages",
    "runs",
    "cloudflare-workers",
    "serverless",
    "universal",
    "roo",
    "claude-desktop",
    "stdio",
    "typescript",
    "enhanced",
    "resources",
    "templates",
    "validation",
    "workflows",
    "documentation"
  ],
  "author": "OpenAI Assistants MCP Server Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "wrangler": "^3.95.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0"
  }
}