{
  "name": "openai-assistants-mcp",
  "version": "3.7.0",
  "description": "Jezweb MCP Core v3.0 - Adaptable, provider-agnostic MCP server with unified 'Shared Core with Thin Adapters' architecture. Features multi-provider support (OpenAI, Anthropic, Google), simple environment-first configuration, comprehensive testing infrastructure, and seamless deployment across Cloudflare Workers and NPM with 100% backward compatibility.",
  "main": "dist/worker.js",
  "type": "module",
  "scripts": {
    "build": "tsc && wrangler deploy --dry-run",
    "build:ts": "tsc",
    "build:worker": "tsc && wrangler deploy --dry-run",
    "dev": "wrangler dev",
    "deploy": "tsc && wrangler deploy",
    "deploy:staging": "tsc && wrangler deploy --env staging",
    "deploy:production": "tsc && wrangler deploy --env production",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:performance": "vitest run test/performance",
    "test:error-handling": "vitest run test/error-handling",
    "test:edge-cases": "vitest run test/edge-cases",
    "test:deployment": "vitest run test/deployment",
    "test:cloudflare": "vitest run test/deployment/cloudflare-workers-tests.test.js",
    "test:npm": "vitest run test/deployment/npm-package-tests.test.js",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk",
    "test:ci": "vitest run --reporter=verbose",
    "definitions:validate": "node definitions/scripts/validate.js",
    "definitions:build": "node definitions/scripts/build.js",
    "definitions:watch": "nodemon --exec \"npm run definitions:build\" --watch definitions/ --ext json",
    "definitions:clean": "rm -rf definitions/generated/*",
    "definitions:migrate": "node definitions/scripts/migrate.js",
    "definitions:tools": "node definitions/scripts/build.js --type=tools",
    "definitions:prompts": "node definitions/scripts/build.js --type=prompts",
    "definitions:resources": "node definitions/scripts/build.js --type=resources",
    "validate:enhanced": "node definitions/scripts/enhanced-validate.js",
    "validate:fix": "node definitions/scripts/enhanced-validate.js --fix",
    "validate:report": "node definitions/scripts/enhanced-validate.js --report",
    "build:enhanced": "node definitions/scripts/enhanced-build.js",
    "build:docs": "node definitions/scripts/enhanced-build.js --docs-only",
    "build:incremental": "node definitions/scripts/enhanced-build.js --incremental",
    "quality:check": "node definitions/scripts/enhanced-validate.js --quality",
    "quality:dashboard": "node definitions/scripts/enhanced-build.js --dashboard",
    "dev:validate": "npm run validate:enhanced && npm run build:enhanced",
    "dev:watch": "nodemon --watch definitions/ --exec \"npm run dev:validate\"",
    "context:generate": "node scripts/generate-context.js",
    "context:clean": "rm -f openai-assistants-mcp-context.txt"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "jezweb",
    "adaptable",
    "multi-provider",
    "openai",
    "anthropic",
    "claude",
    "google",
    "gemini",
    "assistants",
    "assistants-api",
    "threads",
    "messages",
    "runs",
    "cloudflare-workers",
    "serverless",
    "universal",
    "roo",
    "claude-desktop",
    "stdio",
    "typescript",
    "provider-agnostic",
    "simple-config",
    "environment-first",
    "resources",
    "templates",
    "validation",
    "workflows",
    "documentation"
  ],
  "author": "Jezweb MCP Core Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.10.2",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.27.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "hono": "^4.8.10"
  }
}