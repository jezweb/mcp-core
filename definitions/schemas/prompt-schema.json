{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Prompt Definition Schema",
  "description": "Schema for defining MCP prompt templates in the hybrid modular architecture",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
      "description": "Unique identifier for the prompt (kebab-case)"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title for the prompt"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what the prompt does"
    },
    "category": {
      "type": "string",
      "description": "Category for organizing prompts"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorizing and searching prompts"
    },
    "arguments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the argument"
          },
          "description": {
            "type": "string",
            "description": "Description of what the argument is for"
          },
          "required": {
            "type": "boolean",
            "description": "Whether this argument is required"
          },
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "array", "object"],
            "description": "Type of the argument"
          },
          "default": {
            "description": "Default value for the argument"
          }
        },
        "required": ["name", "description", "required"]
      },
      "description": "Arguments that can be passed to the prompt"
    },
    "template": {
      "type": "string",
      "description": "Template string with {{variable}} placeholders"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the example"
          },
          "description": {
            "type": "string",
            "description": "Description of what the example demonstrates"
          },
          "arguments": {
            "type": "object",
            "description": "Example arguments to pass to the prompt"
          }
        },
        "required": ["title", "arguments"]
      },
      "description": "Example usages of the prompt"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version of the prompt definition"
        },
        "author": {
          "type": "string",
          "description": "Author of the prompt"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification date"
        },
        "usage": {
          "type": "string",
          "description": "Usage context or purpose"
        }
      },
      "description": "Metadata about the prompt"
    }
  },
  "required": ["name", "title", "description", "category", "template"],
  "additionalProperties": false
}