{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openai-assistants-mcp.com/schemas/tool-schema.json",
  "title": "MCP Tool Definition Schema",
  "description": "JSON Schema for OpenAI Assistants MCP tool definitions",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
      "description": "Tool name in kebab-case format (e.g., 'assistant-create')"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable title for the tool"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 2000,
      "description": "Detailed description of what the tool does and when to use it"
    },
    "category": {
      "type": "string",
      "enum": ["assistant", "thread", "message", "run", "run-step"],
      "description": "Category this tool belongs to"
    },
    "hints": {
      "type": "object",
      "properties": {
        "readOnly": {
          "type": "boolean",
          "description": "Indicates this tool only reads data, doesn't modify anything"
        },
        "destructive": {
          "type": "boolean",
          "description": "Indicates this tool performs destructive operations (deletions)"
        },
        "idempotent": {
          "type": "boolean",
          "description": "Indicates this tool can be safely called multiple times"
        }
      },
      "additionalProperties": false
    },
    "inputSchema": {
      "$ref": "#/definitions/inputSchema"
    },
    "examples": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/example"
      },
      "description": "Usage examples for the tool"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version of this tool definition"
        },
        "author": {
          "type": "string",
          "description": "Author of this tool definition"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for categorization and search"
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["name", "title", "description", "category", "inputSchema"],
  "additionalProperties": false,
  "definitions": {
    "inputSchema": {
      "type": "object",
      "properties": {
        "type": {
          "const": "object"
        },
        "properties": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "$ref": "#/definitions/property"
            }
          }
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "additionalProperties": {
          "type": "boolean"
        }
      },
      "required": ["type", "properties"],
      "additionalProperties": false
    },
    "property": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "integer", "boolean", "array", "object"]
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500
        },
        "enum": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true
        },
        "items": {
          "$ref": "#/definitions/property"
        },
        "properties": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "$ref": "#/definitions/property"
            }
          }
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "minimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        },
        "minLength": {
          "type": "integer",
          "minimum": 0
        },
        "maxLength": {
          "type": "integer",
          "minimum": 0
        },
        "pattern": {
          "type": "string",
          "format": "regex"
        },
        "format": {
          "type": "string",
          "enum": ["date", "date-time", "email", "uri", "uuid"]
        },
        "default": true
      },
      "required": ["type", "description"],
      "additionalProperties": false
    },
    "example": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the example"
        },
        "description": {
          "type": "string",
          "description": "Description of what this example demonstrates"
        },
        "input": {
          "type": "object",
          "description": "Example input parameters"
        },
        "expectedOutput": {
          "type": "object",
          "description": "Expected output structure"
        }
      },
      "required": ["title", "input"],
      "additionalProperties": false
    }
  }
}