{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Resource Definition Schema",
  "description": "Schema for defining MCP resources in the hybrid modular architecture",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "uri": {
      "type": "string",
      "description": "Unique URI identifier for the resource"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the resource"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what the resource contains"
    },
    "mimeType": {
      "type": "string",
      "description": "MIME type of the resource content"
    },
    "category": {
      "type": "string",
      "description": "Category for organizing resources"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorizing and searching resources"
    },
    "content": {
      "description": "The actual content of the resource (can be string, object, or array)"
    },
    "contentType": {
      "type": "string",
      "enum": ["text", "json", "markdown", "template"],
      "description": "Type of content structure"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version of the resource"
        },
        "author": {
          "type": "string",
          "description": "Author of the resource"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification date"
        },
        "usage": {
          "type": "string",
          "description": "Usage context or purpose"
        },
        "size": {
          "type": "number",
          "description": "Size of the content in bytes"
        }
      },
      "description": "Metadata about the resource"
    }
  },
  "required": ["uri", "name", "description", "mimeType", "content"],
  "additionalProperties": false
}